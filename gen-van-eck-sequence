#!/usr/bin/env perl6

class VanEck {
    method new {
        return Seq.new(
            class :: does Iterator {
                has %!seen is default(-1);
                has Int $!term = -1;
                has Int $!pos  = 0;

                method pull-one {
                    my $next = %!seen{$!term} == -1 ?? 0 !! $!pos - %!seen{$!term};
                    %!seen{$!term} = $!pos++;
                    return $!term = $next;
                }
            }.new()
        );
    }
}

VanEck.new().map({ .say });

